<% action_url = flashcard.persisted? ? subject_flashcard_url(flashcard.subject_id, flashcard) : subject_flashcards_url %>
<% method = flashcard.persisted? ? "PATCH" : "POST" %>
<% button_msg = flashcard.persisted? ? "Update" : "Create Flashcard" %>

<form action="<%= action_url %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <input type="hidden" name="authenticity_token"
  value="<%=form_authenticity_token%>" >

  <label for="question">Question</label><br>
  <textarea id="question" class='form-control'
  name="flashcard[question]"><%= flashcard.question %></textarea>

  <label for="answer">Answer</label><br>
  <textarea id="answer" class='form-control'
  name="flashcard[answer]"><%= flashcard.answer %></textarea>

  <br><br>

  <button name="submit" style="width: 100%" class="btn btn-primary"><%= button_msg %></button>

</form>
